  </ItemGroup>

  <ItemGroup>
    <None Include="..\PostBuild.bat">
      <Link>PostBuild.bat</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="App.config" />
